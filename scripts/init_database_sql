/* 
   Drop and recreate the DataWarehouse database
   WARNING: This will delete the database if it exists.
   Make sure you have proper backups before running this script.
*/

USE master;
GO

-- Drop and recreate the 'DataWarehouse' database
IF EXISTS (SELECT 1 FROM sys.databases WHERE name = 'DataWarehouse')
BEGIN
    ALTER DATABASE DataWarehouse 
    SET SINGLE_USER 
    WITH ROLLBACK IMMEDIATE;

    DROP DATABASE DataWarehouse;
END;
GO


--Met la base en mode utilisateur unique
--DÃ©connecte immÃ©diatement tous les utilisateurs
--Annule leurs requÃªtes en cours
--ðŸ‘‰ Pourquoi ?
--Parce que SQL Server ne peut pas supprimer une base si quelquâ€™un lâ€™utilise.



-- Create the 'DataWarehouse' database
CREATE DATABASE DataWarehouse;
GO

USE DataWarehouse;
GO

-- Create Schemas
CREATE SCHEMA bronze;
GO
CREATE SCHEMA silver;
GO
CREATE SCHEMA gold;
GO


